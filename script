local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
    Name = "Labubu Unboxing Sim Hub",
    Icon = 0,
    LoadingTitle = "Labubu Unboxing Sim Hub",
    LoadingSubtitle = "by Plasma",
    ShowText = "Rayfield",
    Theme = "Default",
    ToggleUIKeybind = "K",
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false
})

local PlayerTab = Window:CreateTab("Main", 4483362458)

-- Toggle: Instant Open Boxes
local instantOpenEnabled = false
local promptConnection = nil

PlayerTab:CreateToggle({
    Name = "Instant Open Boxes",
    Default = false,
    Callback = function(state)
        instantOpenEnabled = state

        -- Disconnect if toggled off
        if not instantOpenEnabled then
            if promptConnection then
                promptConnection:Disconnect()
                promptConnection = nil
            end
            return
        end

        -- Toggle ON logic
        local ProximityPromptService = game:GetService("ProximityPromptService")

        if fireproximityprompt then
            task.wait(0.1)
            promptConnection = ProximityPromptService.PromptButtonHoldBegan:Connect(function(prompt)
                if prompt.HoldDuration > 0 then
                    prompt.HoldDuration = 0
                end
                fireproximityprompt(prompt)
            end)
        else
            print("No instant ProximityPrompt support")
        end
    end
})


-- Toggle: Auto Sell
local autoSellEnabled = false

PlayerTab:CreateToggle({
    Name = "Auto Sell",
    Default = false,
    Callback = function(state)
        autoSellEnabled = state

        -- Start loop only when enabled
        task.spawn(function()
            while autoSellEnabled do
                local args = {
                    "Option1"
                }
                game:GetService("ReplicatedStorage"):WaitForChild("SellChoiceEvent"):FireServer(unpack(args))
                wait(1)
            end
        end)
    end
})








local PlayerTab = Window:CreateTab("Misc", 4483362458)

PlayerTab:CreateButton({
    Name = "Copy Discord Server Link",
    Callback = function()
        setclipboard("https://discord.gg/9h8g9pYcwT") -- replace with your real invite
        Rayfield:Notify({
            Title = "Copied!",
            Content = "Discord invite link has been copied to clipboard.",
            Duration = 4
        })
    end
})
